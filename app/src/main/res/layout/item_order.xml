<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Order information -->
        <TextView
            android:id="@+id/tvOrderOrigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: Origin City"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: Destination City" />

        <TextView
            android:id="@+id/tvOrderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100.00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created: Jan 1, 2025" />

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending" />

        <!-- Driver info (shown only when assigned) -->
        <TextView
            android:id="@+id/tvDriverInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver assigned: ..."
            android:textStyle="italic"
            android:visibility="gone"
            android:layout_marginTop="4dp" />

        <!-- Buttons container -->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditOrder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Edit" /><Button
            android:id="@+id/btnDeleteOrder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Delete" />
        </LinearLayout>

        <Button
            android:id="@+id/btnContactDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Driver"
            android:visibility="gone"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>